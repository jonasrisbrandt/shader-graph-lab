{
  "assets": {
    "identity": {
      "type": "image",
      "url": "../common/luts/identity-16.svg",
      "filter": "linear",
      "lutSize": 16
    }
  },
  "shaders": {
    "julia": { "$include": "./shaders/julia.frag.glsl" },
    "blit": { "$include": "../common/components/down-up/shaders/blit.frag.glsl" },
    "combine": { "$include": "../circle-bloom/shaders/combine.frag.glsl" },
    "threshold": { "$include": "../common/components/bloom/shaders/threshold.frag.glsl" },
    "downsample": { "$include": "../common/components/bloom/shaders/downsample.frag.glsl" },
    "blur": { "$include": "../common/components/bloom/shaders/blur.frag.glsl" },
    "bloomCombine": { "$include": "../common/components/bloom/shaders/bloom-combine.frag.glsl" },
    "tonemap": { "$include": "../common/components/tonemap/shaders/tonemap.frag.glsl" }
  },
  "components": {
    "bloom": { "$include": "../common/components/bloom/component.json" },
    "tonemap": { "$include": "../common/components/tonemap/component.json" }
  },
  "graphs": {
    "main": {
      "uiGroups": {
        "bloom": { "label": "Bloom", "order": 1 },
        "tonemap": { "label": "Tonemap", "order": 2 }
      },
      "passes": [
        {
          "id": "julia",
          "fragment": { "$ref": "shader.julia" },
          "outputs": {
            "color": { "format": "rgba16f", "size": { "kind": "scale", "scale": 2 }, "filter": "linear" }
          },
          "uniforms": {
            "uMorph": { "type": "f1", "value": 0.5, "min": 0, "max": 1, "step": 0.001, "ui": { "label": "Morph Speed" } },
            "uRotationSpeed": { "type": "f1", "value": 0.08, "min": -1, "max": 1, "step": 0.001, "ui": { "label": "Rotation Speed" } },
            "uZoomSpeed": { "type": "f1", "value": 0.25, "min": 0, "max": 2, "step": 0.001, "ui": { "label": "Zoom Speed" } },
            "uZoomDepth": { "type": "f2", "value": [0.92, 1.08], "min": 0.5, "max": 1.5, "step": 0.001, "ui": { "label": "Zoom Min/Max" } },
            "uJuliaRadius": { "type": "f1", "value": 0.7885, "min": 0.0, "max": 1.2, "step": 0.0005, "ui": { "label": "Julia Radius" } }
          }
        },
        {
          "id": "resolve",
          "fragment": { "$ref": "shader.blit" },
          "inputs": {
            "uSrc": { "source": "julia.color" }
          },
          "outputs": {
            "out": { "format": "rgba16f", "size": { "kind": "full" }, "filter": "linear" }
          }
        },
        {
          "id": "combine",
          "fragment": { "$ref": "shader.combine" },
          "inputs": {
            "uBase": { "source": "resolve.out" },
            "uBloom": { "source": "bloom.out" }
          },
          "outputs": {
            "out": { "format": "rgba16f", "size": { "kind": "full" }, "filter": "linear" }
          },
          "uniforms": {
            "uIntensity": { "type": "f1", "value": 2.65, "min": 0, "max": 4, "step": 0.01, "ui": { "group": "bloom", "label": "Bloom Intensity" } }
          }
        }
      ],
      "components": [
        {
          "id": "bloom",
          "component": "bloom",
          "bindings": { "src": "resolve.out" },
          "uniforms": {
            "threshold": {
              "uThreshold": { "value": 0.92, "ui": { "group": "bloom", "label": "Threshold" } }
            },
            "combine": {
              "uBloomWeights": { "value": [3, 3, 3], "ui": { "group": "bloom", "label": "Bloom Weights" } }
            }
          }
        },
        {
          "id": "tonemap",
          "component": "tonemap",
          "bindings": { "src": "combine.out", "lut": "$asset.identity" },
          "uniforms": {
            "tonemap": {
              "uExposure": { "value": 2.05, "ui": { "group": "tonemap", "label": "Exposure" } },
              "uGamma": { "value": 1.2, "ui": { "group": "tonemap", "label": "Gamma" } },
              "uUseLut": { "value": 1, "ui": { "group": "tonemap", "label": "Use LUT" } }
            }
          }
        }
      ],
      "output": "tonemap.out"
    }
  }
}
