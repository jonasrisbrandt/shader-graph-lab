{
  "shaders": {
    "noiseLayer": { "$include": "./shaders/noise-layer.frag.glsl" },
    "combine": { "$include": "./shaders/noise-combine.frag.glsl" }
  },
  "graphs": {
    "main": {
      "passes": [
        {
          "id": "noise0",
          "fragment": { "$ref": "shader.noiseLayer" },
          "outputs": {
            "out": { "format": "rgba16f", "size": { "kind": "full" }, "filter": "linear" }
          },
          "uniforms": {
            "uScale": { "type": "f1", "value": 3.0, "min": 0.5, "max": 10.0 },
            "uSpeed": { "type": "f1", "value": 0.3, "min": 0.0, "max": 2.0 },
            "uAmplitude": { "type": "f1", "value": 0.7, "min": 0.0, "max": 2.0 }
          }
        },
        {
          "id": "noise1",
          "fragment": { "$ref": "shader.noiseLayer" },
          "outputs": {
            "out": { "format": "rgba16f", "size": { "kind": "full" }, "filter": "linear" }
          },
          "uniforms": {
            "uScale": { "type": "f1", "value": 7.0, "min": 1.0, "max": 20.0 },
            "uSpeed": { "type": "f1", "value": 0.6, "min": 0.0, "max": 3.0 },
            "uAmplitude": { "type": "f1", "value": 0.5, "min": 0.0, "max": 2.0 }
          }
        },
        {
          "id": "noise2",
          "fragment": { "$ref": "shader.noiseLayer" },
          "outputs": {
            "out": { "format": "rgba16f", "size": { "kind": "full" }, "filter": "linear" }
          },
          "uniforms": {
            "uScale": { "type": "f1", "value": 14.0, "min": 2.0, "max": 40.0 },
            "uSpeed": { "type": "f1", "value": 1.1, "min": 0.0, "max": 5.0 },
            "uAmplitude": { "type": "f1", "value": 0.35, "min": 0.0, "max": 2.0 }
          }
        },
        {
          "id": "combine",
          "fragment": { "$ref": "shader.combine" },
          "inputs": {
            "uA": { "source": "noise0.out" },
            "uB": { "source": "noise1.out" },
            "uC": { "source": "noise2.out" }
          },
          "outputs": {
            "out": { "format": "rgba16f", "size": { "kind": "full" }, "filter": "linear" }
          },
          "uniforms": {
            "uWeights": { "type": "f3", "value": [0.6, 0.35, 0.2], "min": 0.0, "max": 2.0 }
          }
        }
      ],
      "output": "combine.out"
    }
  }
}
